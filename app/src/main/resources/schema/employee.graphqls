input CreateEmployeeInput {
    name: String!
    departmentId: String!
}

type EmployeePayload {
    id: ID!
    name: String!
    department: DepartmentPayload
}

extend type Mutation {
    createEmployee(input: CreateEmployeeInput!): EmployeePayload! @auth(permissions: ["ADMIN"])
}

extend type Query {
    employee(id: ID!): EmployeePayload
    employees(departmentId: ID): [EmployeePayload]
}