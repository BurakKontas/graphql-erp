input CreateEmployeeInput {
    name: String!
    departmentId: String!
}

type EmployeePayload {
    id: ID!
    name: String!
    department: DepartmentPayload
}

extend type Mutation {
    createEmployee(input: CreateEmployeeInput!): EmployeePayload! @auth(permissions: ["EMPLOYEE:CREATE"])
}

extend type Query {
    employee(id: ID!): EmployeePayload @auth(permissions: ["EMPLOYEE:READ"])
    employees(departmentId: ID): [EmployeePayload] @auth(permissions: ["EMPLOYEE:READ"])
}