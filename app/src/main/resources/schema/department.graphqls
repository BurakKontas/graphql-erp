input CreateDepartmentInput {
    name: String!
    companyId: String!
    parentId: String
}

type DepartmentPayload {
    id: ID!
    name: String!
    company: CompanyPayload
    parent: DepartmentPayload
    employees: [EmployeePayload]
}

extend type Mutation {
    createDepartment(input: CreateDepartmentInput!): DepartmentPayload! @auth(permissions: ["GENERAL:ADMIN"])
}

extend type Query {
    department(id: ID!): DepartmentPayload
    departments(companyId: ID): [DepartmentPayload]
}